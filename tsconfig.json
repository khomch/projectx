{
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": ".",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true, // позволяет использовать импроты es6
    "allowSyntheticDefaultImports": true, // позволяет использовать импроты es6
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}